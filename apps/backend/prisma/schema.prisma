generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id                String   @id @default(uuid())
  studentID         String   @unique
  fullname          String
  categoryIDVoted   String? // Nullable initially
  candidatesIDVoted String? // Nullable initially
  timestamp         DateTime @default(now())
  token             String? // Refresh token
}

model Admin {
  id        String  @id @default(uuid())
  adminUser String  @unique
  fullname  String
  password  String
  token     String? // Refresh token
}
