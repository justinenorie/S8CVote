{
  "name": "s8cvote",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "desktop": "turbo run dev --filter=backend --filter=s8cvote-desktop",
    "mobile": "turbo run dev --filter=backend --filter=s8cvote-mobile-app",
    "web": "turbo run dev --filter=backend --filter=s8cvote-web-app",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
